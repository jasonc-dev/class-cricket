extends base

block content 

  section#register 
    .register-form
            h2.register-heading.ma-bt-lg SIGN UP
            form.form.form--signup
                .form__group
                    label.form__label(for='email') Email address
                    input#email.form__input(type='email', required)
                .form__group
                    label.form__label(for='password') Password
                    input#password.form__input(type='password', required, minlength='8')
                .form__group
                    label.form__label(for='password') Password confirm
                    input#passwordConfirm.form__input(type='password', required, minlength='8')
                .form__group
                    button.btn.btn--blue register 