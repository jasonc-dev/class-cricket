extends base

block content 

  section#login 
    .login-form
        h2.login-heading.ma-bt-lg Log into your account
        form.form.form--login
            .form__group
                label.form__label(for='email') Email address
                input#email.form__input(type='email', required)
            .form__group.ma-bt-md
                label.form__label(for='password') Password
                input#password.form__input(type='password', required, minlength='8')
            .form__group
                button.btn.btn--blue Login 